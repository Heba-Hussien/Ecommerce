<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<android.support.v7.widget.Toolbar
    android:id="@+id/add_order_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"

    android:theme="@style/myToolbarTheme"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New product"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

</android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="20dp"
     android:orientation="vertical"
     android:layout_marginTop="50dp">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         android:text="Product name"
         android:textColor="@color/color1"/>

     <EditText
         android:id="@+id/new_order_product"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="@drawable/layout_boarder"
         android:inputType="text"
         android:layout_margin="@dimen/view_margin"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
         android:maxLines="1"
         android:paddingLeft="@dimen/view_margin"
         android:singleLine="true" />


     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         android:text="Quantity"
         android:textColor="@color/color1"/>
     <EditText
         android:id="@+id/new_order_quantity"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="@drawable/layout_boarder"
         android:inputType="number"
         android:layout_margin="@dimen/view_margin"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
         android:maxLines="1"
         android:paddingLeft="@dimen/view_margin"
         android:singleLine="true" />


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/hint_store_type"
         android:layout_marginTop="@dimen/view_margin"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         android:textColor="@color/color1"/>
     <Spinner
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/new_order_spin"
         android:spinnerMode="dialog"/>
     <Button
         android:id="@+id/new_orderBtn"
         android:background="@drawable/btn_bg"
         android:layout_width="match_parent"
         android:layout_gravity="center_horizontal"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:text="Send"
         android:textColor="#ffffff"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

 </LinearLayout>
    </ScrollView>

    </LinearLayout>